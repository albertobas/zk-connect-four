{
  "name": "circuits",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "clean": "rm -rf build/**",
    "compile": "mkdir -p build && circom connect_four.circom --r1cs --wasm --sym --json -o build",
    "export": "ts-node scripts/export.ts",
    "export:json": "snarkjs zkey export verificationkey build/proving_key.zkey zk/proving_key.json",
    "generate": "pnpm run generate:proving-key && pnpm run generate:verifier-contract",
    "generate:proving-key": "snarkjs plonk setup build/connect_four.r1cs ptau/powersOfTau28_hez_final_13.ptau build/proving_key.zkey",
    "generate:verifier-contract": "snarkjs zkey export solidityverifier build/proving_key.zkey '../contracts/src/PlonkVerifier.sol'",
    "info": "snarkjs r1cs info build/connect_four.r1cs",
    "lint": "eslint test/**/*.ts",
    "print:constraints": "snarkjs r1cs print build/connect_four.r1cs build/connect_four.sym",
    "test": "ts-mocha test/**/*.ts"
  },
  "dependencies": {
    "circom_tester": "0.0.19",
    "circomlib": "2.0.5",
    "snarkjs": "0.6.9"
  },
  "devDependencies": {
    "@types/chai": "4.3.5",
    "@types/expect": "24.3.0",
    "@types/mocha": "10.0.1",
    "@types/node": "20.5.1",
    "chai": "4.3.7",
    "eslint-config-custom": "workspace:*",
    "ts-mocha": "10.0.0",
    "ts-node": "10.9.1",
    "tsconfig": "workspace:*",
    "typescript": "5.2.2"
  }
}
